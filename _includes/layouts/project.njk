---
layout: layouts/base.njk
section: project
---
<div class="page-container">
  <h1>
    {% if emoji %}
      <span class="project-card__emoji">{{ emoji }}</span>
    {% endif %}
    <a href = {{project_url}}>{{ title }}</a></h1>

  <strong>Open bounties:</strong>
  {% if bounties %}
    {% for issue in bounties %}         
      {% set issueUrl %}{{project_url}}/issues/{{issue.issue_num}}{% endset %}
      <a class="tag" href="{{ issueUrl | url }}" rel="issue">${{ issue.value }}</a>
    {% endfor %}
  {% endif %}
  <hr>
  {{ layoutContent | safe }}
  <nav>
    <a href="{{ '/projects/' | url }}">‚Üê View All Projects</a>
  </nav>
</div>